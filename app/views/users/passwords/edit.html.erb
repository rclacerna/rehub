<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-horizontal'}) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-3">
      <p class="page_title" >Change your password</p>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-sm-2 control-label", "New password" %><br />
    <div class="col-sm-3">
      <%= f.password_field :password, class: "form-control", autofocus: true, autocomplete: "off" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: "col-sm-2 control-label", "Confirm new password" %><br />
    <div class="col-sm-3">
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-3">
      <%= f.submit "Change my password", class: "btn btn-primary" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-3">
      <%= render "users/shared/links" %>
    </div>
  </div>
  
<% end %>

